<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>User Manager</display-name>
  <welcome-file-list>
    <welcome-file>account.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Register</servlet-name>
    <servlet-class>com.hcl.usermanager.controller.RegisterController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Register</servlet-name>
    <url-pattern>/register</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>com.hcl.usermanager.controller.LoginController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>com.hcl.usermanager.controller.LogoutController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Account</servlet-name>
    <servlet-class>com.hcl.usermanager.controller.AccountController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Account</servlet-name>
    <url-pattern>/account</url-pattern>
  </servlet-mapping>
  <filter>
    <filter-name>VerifyAccountInput</filter-name>
    <filter-class>com.hcl.usermanager.service.AccountInputValidator</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>VerifyAccountInput</filter-name>
    <servlet-name>Register</servlet-name>
  </filter-mapping>
  <filter>
    <filter-name>VerifyLoggedIn</filter-name>
    <filter-class>com.hcl.usermanager.service.LoggedInValidator</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>VerifyLoggedIn</filter-name>
    <url-pattern>/account.jsp</url-pattern>
  </filter-mapping>
  <filter-mapping>
    <filter-name>VerifyLoggedIn</filter-name>
    <servlet-name>Account</servlet-name>
  </filter-mapping>
</web-app>
